{% if section.settings.enabled %}
  {% include 'content--featured-collection' with
    id: section.id,

    section_style: "default",
    text_position: section.settings.text_position,

    featured_collection: collections[section.settings.collection],
    columns: section.settings.columns,
    aspect_ratio: section.settings.aspect_ratio,
    overline: section.settings.overline,
    heading: section.settings.title,
    subheading: section.settings.subheading,
    text_max_width: section.settings.text_max_width,
    link_text: section.settings.link_text,
  %}
{% endif %}

{% schema %}
  {
    "name": "Featured collection",
    "class": "section-dynamic section-borderable",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled",
        "label": "Enable",
        "default": false
      },
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Text position",
        "options": [
          { "value": "top_left", "label": "Top left" },
          { "value": "top_center", "label": "Top center" },
          { "value": "top_right", "label": "Top right" },
          { "value": "middle_left", "label": "Middle left" },
          { "value": "middle_right", "label": "Middle right" }
        ],
        "default": "top_center"
      },
      {
        "type": "header",
        "content": "Section content"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "columns",
        "label": "Columns",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "id": "aspect_ratio",
        "type": "select",
        "label": "Image aspect ratio",
        "options": [
          { "label": "Natural", "value": "natural" },
          { "label": "Square (1:1)", "value": "square" },
          { "label": "Landscape (3:2)", "value": "landscape" },
          { "label": "Portrait (2:3)", "value": "portrait" }
        ],
        "default": "natural"
      },
      {
        "type": "text",
        "id": "overline",
        "label": "Small heading",
        "default": "Collection"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Add a subheading to provide more details about this collection."
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Collection link text",
        "default": "Shop now"
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 36
      }
    ]
  }
{% endschema %}
