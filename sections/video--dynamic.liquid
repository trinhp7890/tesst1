{% render 'content--video' with
  id: section.id,
  section_style: section.settings.section_style,
  heading_alignment: section.settings.heading_alignment,
  text_max_width: section.settings.text_max_width,
  overline: section.settings.overline,
  heading: section.settings.title,
  subheading: section.settings.subheading,
  link: section.settings.link,
  link_text: section.settings.link_text,
  video: section.settings.video_url,
  image: section.settings.image,
  overlay_opacity: section.settings.overlay_opacity,
  overlay_color: section.settings.overlay_color
%}

{% schema %}
  {
    "name": "Video",
    "class": "section-dynamic section-borderable",
    "settings": [
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Style",
        "default": "default",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "contrast",
            "label": "Contrast"
          }
        ]
      },
      {
        "type": "header",
        "content": "Section content"
      },
      {
        "type": "text",
        "id": "overline",
        "label": "Small heading",
        "default": "Video"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Video Section"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "select",
        "id": "heading_alignment",
        "label": "Heading alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 36
      },
      {
        "type": "header",
        "content": "Video content"
      },
      {
        "id": "video_url",
        "type": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Featured image"
      },
      {
        "type": "header",
        "content": "Overlay options"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "default": 20,
        "label": "Overlay opacity"
      },
      {
        "type": "color",
        "id": "overlay_color",
        "label": "Overlay color",
        "default": "#000"
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Video",
        "settings": {
          "overline": "Video",
          "title": "Video section",
          "subheading": "Use this section for interviews, product promotions, demo reels, and more."
        }
      }
    ]
  }
{% endschema %}
