{% render 'content--slideshow-split' with
  id: section.id,
  timer: section.settings.timer,

  overline: section.settings.overline,
  title: section.settings.title,
  subheading: section.settings.subheading,
  link: section.settings.link,
  link_text: section.settings.link_text,

  overlay_opacity: section.settings.overlay_opacity,
  overlay_color: section.settings.overlay_color,
  text_color: section.settings.text_color,
  text_max_width: section.settings.text_max_width,
  horizontal_text_position: section.settings.horizontal_text_position,
  vertical_text_position: section.settings.vertical_text_position,
  blocks: section.blocks,
%}

{% schema %}
  {
    "name": "Slideshow split",
    "class": "section-dynamic",
    "settings": [
      {
        "id": "timer",
        "type": "range",
        "label": "Time between slides",
        "default": 7,
        "min": 5,
        "max": 15,
        "step": 1
      },
      {
        "type": "text",
        "id": "overline",
        "label": "Small heading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "The Slideshow Split"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "When one image isn't enough. Use an arrangement of editorial photos with a similar tone and feel for a unique storytelling sequence."
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text",
        "default": "Shop now",
        "info": "The entire slide will become a link if this setting is left blank."
      },
      {
        "type": "header",
        "content": "Style"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "label": "Overlay opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "default": 20
      },
      {
        "type": "color",
        "id": "overlay_color",
        "label": "Overlay color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 48
      },
      {
        "type": "select",
        "id": "horizontal_text_position",
        "label": "Horizontal text position",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" },
          { "value": "right", "label": "Right" }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "vertical_text_position",
        "label": "Vertical text position",
        "options": [
          { "value": "top", "label": "Top" },
          { "value": "middle", "label": "Middle" },
          { "value": "bottom", "label": "Bottom" }
        ],
        "default": "middle"
      }
    ],
    "max_blocks": 8,
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Portrait orientation. 360 x 1440px minimum recommended."
          },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile image",
            "info": "Optional"
          },
          {
            "type": "url",
            "id": "video_url",
            "label": "Video link",
            "info": "Direct link to .mp4 video file. [Learn more here](https://help.fluorescent.co/lorenza/full-width-image.html#upload-a-video)."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slideshow split",
        "category": "Image",
        "blocks": [
          {
            "type": "slide"
          },
          {
            "type": "slide"
          },
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}