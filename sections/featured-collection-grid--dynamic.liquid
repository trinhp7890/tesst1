{% include 'content--featured-collection-grid' with
  id: section.id,
  section_style: section.settings.section_style,
  featured_collection: collections[section.settings.collection],
  heading_alignment: section.settings.heading_alignment,
  overline: section.settings.overline,
  heading: section.settings.title,
  subheading: section.settings.subheading,
  text_max_width: section.settings.text_max_width,
  link_text: section.settings.link_text,
  total_row: section.settings.total_row,
  products_per_row: section.settings.products_per_row,
  aspect_ratio: section.settings.aspect_ratio,
%}

{% schema %}
  {
    "name": "Featured collection grid",
    "class": "section-dynamic section-borderable",
    "settings": [
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Style",
        "default": "default",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "contrast",
            "label": "Contrast"
          }
        ]
      },
      {
        "type": "header",
        "content": "Section content"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "id": "products_per_row",
        "type": "range",
        "label": "Columns",
        "default": 3,
        "min": 2,
        "max": 4,
        "step": 1
      },
      {
        "id": "total_row",
        "type": "range",
        "label": "Rows",
        "default": 2,
        "min": 1,
        "max": 3,
        "step": 1
      },
      {
        "id": "aspect_ratio",
        "type": "select",
        "label": "Image aspect ratio",
        "options": [
          { "label": "Natural", "value": "natural" },
          { "label": "Square (1:1)", "value": "square" },
          { "label": "Landscape (3:2)", "value": "landscape" },
          { "label": "Portrait (2:3)", "value": "portrait" }
        ],
        "default": "natural"
      },
      {
        "type": "text",
        "id": "overline",
        "label": "Small heading",
        "default": "Collection"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Add a subheading to provide more details about this collection."
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Button text",
        "default": "Shop now"
      },
      {
        "type": "select",
        "id": "heading_alignment",
        "label": "Heading alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Featured collection grid",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
