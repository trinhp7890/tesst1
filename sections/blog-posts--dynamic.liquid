{% include 'content--blog-posts' with
  id: section.id,
  section_style: section.settings.section_style,

  columns: section.settings.columns,
  aspect_ratio: section.settings.aspect_ratio,
  overline: section.settings.title,
  link_text: section.settings.link_text,
  text_max_width: section.settings.text_max_width,

  blocks: section.blocks,
%}

{% schema %}
  {
    "name": "Blog posts",
    "class": "section-dynamic section-borderable",
    "settings": [
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Style",
        "default": "default",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "contrast",
            "label": "Contrast"
          }
        ]
      },
      {
        "type": "header",
        "content": "Section content"
      },
      {
        "type": "range",
        "id": "columns",
        "label": "Columns",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 1
      },
      {
        "id": "aspect_ratio",
        "type": "select",
        "label": "Image aspect ratio",
        "options": [
          { "label": "Natural", "value": "natural" },
          { "label": "Square (1:1)", "value": "square" },
          { "label": "Landscape (3:2)", "value": "landscape" },
          { "label": "Portrait (2:3)", "value": "portrait" }
        ],
        "default": "landscape"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Story"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text",
        "default": "Read more"
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 48
      }
    ],
    "max_blocks": 6,
    "blocks": [
      {
        "type": "article",
        "name": "Article",
        "settings": [
          {
            "id": "article",
            "type": "article",
            "label": "Article"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Blog posts",
        "category": "Blog"
      }
    ]
  }
{% endschema %}
