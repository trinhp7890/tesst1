{% include 'content--gallery' with
  id: section.id,

  section_style: section.settings.section_style,
  text_position: section.settings.text_position,

  columns: section.settings.columns,
  aspect_ratio: section.settings.aspect_ratio,
  overline: section.settings.overline,
  heading: section.settings.title,
  subheading: section.settings.subheading,
  text_max_width: section.settings.text_max_width,
  link: section.settings.link,
  link_text: section.settings.link_text,

  blocks: section.blocks
%}

{% schema %}
  {
    "name": "Gallery",
    "class": "section-dynamic section-borderable",
    "settings": [
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Style",
        "default": "default",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "contrast",
            "label": "Contrast"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Text position",
        "options": [
          { "value": "top_left", "label": "Top left" },
          { "value": "top_center", "label": "Top center" },
          { "value": "top_right", "label": "Top right" },
          { "value": "middle_left", "label": "Middle left" },
          { "value": "middle_right", "label": "Middle right" }
        ],
        "default": "top_center"
      },
      {
        "type": "header",
        "content": "Section content"
      },
      {
        "type": "range",
        "id": "columns",
        "label": "Columns",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "id": "aspect_ratio",
        "type": "select",
        "label": "Image aspect ratio",
        "options": [
          { "label": "Natural", "value": "natural" },
          { "label": "Square (1:1)", "value": "square" },
          { "label": "Landscape (3:2)", "value": "landscape" },
          { "label": "Portrait (2:3)", "value": "portrait" }
        ],
        "default": "square"
      },
      {
        "type": "text",
        "id": "overline",
        "label": "Small heading",
        "default": "Gallery"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Gallery section"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Use this Section to display your favourite images. Automatically crop them to be uniform using the dropdown setting."
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link text"
      },
      {
        "type": "range",
        "id": "text_max_width",
        "label": "Max width of text",
        "min": 16,
        "max": 50,
        "step": 1,
        "default": 36
      }
    ],
    "max_blocks": 15,
    "blocks": [
      {
        "type": "image",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Gallery",
        "category": "Promotional"
      }
    ]
  }
{% endschema %}
