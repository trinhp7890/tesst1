{% render 'pages--article' with
  show_date: section.settings.show_date,
  show_title: section.settings.show_title,
  show_featured_image: section.settings.show_featured_image,
  show_author: section.settings.show_author,
%}

{% schema %}
  {
    "name": "Articles",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_title",
        "label": "Show title",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_author",
        "label": "Show author",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_featured_image",
        "label": "Show featured image",
        "default": true
      }
    ]
  }
{% endschema %}