{% render 'conten-section-services' with
  id: section.id,
  section_style: section.settings.section_style,
  columns: section.settings.columns,
  heading: section.settings.title,
  subheading: section.settings.subheading,
  blocks: section.blocks,
%}

{% schema %}
  {
    "name": "SERVICES BLOCK",
    "class": "section-dynamic section-borderable",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "."
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "."
      }      
    ],
    "max_blocks": 12,
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [   
          {
            "type": "checkbox",
            "id": "enable_special",
            "label": "Enable",
            "info": "Show color special",
            "default": false
          },       
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Column heading"
          },
          {
            "type": "text",
            "id": "number_show",
            "label": "number_show",
            "default": "0"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading",
            "default": "Column text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "SERVICES BLOCK",
        "category": "Text",
        "blocks": [
          {
            "type": "column",
            "settings": {
              "title": "Column one",
              "subheading": "."
            }
          },
          {
            "type": "column",
            "settings": {
              "title": "Column two",
              "subheading": "."
            }
          },
          {
            "type": "column",
            "settings": {
              "title": "Column three",
              "subheading": "."
            }
          }
        ]
      }
    ]
  }
{% endschema %}
