<div class="lightbox" data-lightbox>
  <div class="lightbox__images" data-images tabindex="0">
    <button class="lightbox__close" data-close>
      {% render 'icon-close' %}
    </button>

    {%- for image in images -%}
      <div class="lightbox__image" data-id="{{ image.id }}">
        {% render 'image' with image: image %}
      </div>
    {%- endfor -%}
  </div>
</div>
