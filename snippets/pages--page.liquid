<section
  class="page section"
  data-section-id="{{ id }}"
  data-section-type="page"
>

  <header class="page__header center">
    {% unless overline == blank %}
      <div class="page__overline overline ma0 mb3 tc">
        {{ overline }}
      </div>
    {% endunless %}

    <h1 class="type-heading-1 tc mt0 mb5">{{ page.title }}</h1>
  </header>

  {%- if blocks.size > 0 -%}
    <div class="about__grid about__grid--{{ blocks.size }}">
      {%- for block in section.blocks -%}
        <div class="about__block about__block--{{ forloop.index }}"> 

          {%- if block.settings.image == blank and block.settings.video_url == blank -%}
            <div class="placeholder-image">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}

          {%- if block.settings.image != blank -%}
            {% render 'image' with
              image: block.settings.image,
              disable_style: true
            %}
          {%- endif -%}

          {% if block.settings.video_url != blank %}
            <video class="about__block-video" autoplay playsinline loop muted src="{{ block.settings.video_url }}"></video>
          {% endif %}
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}

  <div class="page__content center">
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</section>
